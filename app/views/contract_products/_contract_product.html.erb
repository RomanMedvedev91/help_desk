<tr>
  <td>
    <h4><%= Contract.find_by_id(contract_product.contract_id).reference %></h4>
  </td>
  <td>
    <h4><%= Product.find_by_id(contract_product.product_id).code %></h4>
  </td>
  <td>
    <h4><%= contract_product.serial_number %></h4>
  </td>
  <td>
    <%= link_to fa_icon('edit'), edit_contract_product_path(contract_product), class: 'btn btn-sm btn-primary' %>
  </td>
  <td>
    <%= link_to fa_icon('trash'), [contract_product], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>

</tr>