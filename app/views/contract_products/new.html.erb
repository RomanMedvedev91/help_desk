<section class="contract_products-new">

  <header class="page-header">
    <h1>Admin &raquo; New Contract Product</h1>
  </header>

  <div class="well">
    <%= link_to 'All Contract Product', [:admin, :contract_products], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @contract_product] do |form| %>
    
        <% if form.object.errors.any? %>
         <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :contract_id %>
          <%= form.text_field :contract_id, class: 'form-control' %>
          <%= form.label :product_id %>
          <%= form.text_field :product_id, class: 'form-control' %>
          <%= form.label :serial_number %>
          <%= form.text_field :serial_number, class: 'form-control' %>
        </div>

        <%= form.submit 'Create Contract Product', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
