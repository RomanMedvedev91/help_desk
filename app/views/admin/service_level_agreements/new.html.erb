<section class="admin-service_level_agreement-new">

  <header class="page-header">
    <h1>Admin &raquo; New S.L.A</h1>
  </header>

  <div class="well">
    <%= link_to 'All S.L.A', [:admin, :service_level_agreements], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @service_level_agreement] do |form| %>
    
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :code %>
          <%= form.text_field :code, class: 'form-control' %>
          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control' %>
          <%= form.label :business_days %>
          <%= form.number_field :business_days, class: 'form-control' %>
          <%= form.label :business_hours %>
          <%= form.number_field :business_hours, class: 'form-control' %>
        </div>

        <%= form.submit 'Create Priority', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
