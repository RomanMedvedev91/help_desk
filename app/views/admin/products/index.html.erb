<section class="admin-product-index">

  <header class="page-header">
    <h1>Admin &raquo; Products</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default qas">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Code</th>
          <th>Description</th>
          <th>Model</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% if @products %>
        <%= render @products %>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
