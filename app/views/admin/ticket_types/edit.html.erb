<section class="ticket-new">

  <header class="page-header">
    <h1>Edit Ticket Type</h1>
  </header>

  <div class="well">
    <%= link_to 'All Ticket Types', [:admin, :ticket_types], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @ticket_type] do |form| %>
    
        <% if form.object.errors.any? %>
         <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :code %>
          <%= form.text_field :code, class: 'form-control' %>

          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>

        <%= form.submit 'Update Ticket Type', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
