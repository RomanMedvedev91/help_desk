<tr>
  <td>
    <%= category.code %>
  </td>
  <td>
    <%= category.description.html_safe %>
  </td>
  <td>
    <%= link_to fa_icon('edit'), edit_admin_category_path(category), class: 'btn btn-sm btn-primary' %>
  </td>
  <td>
    <%= link_to fa_icon('trash'), [:admin, category], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>