<div class="login-form">
  <h1 class="login-form-header">Login</h1>

  <%= form_tag '/login', class: "form-horizontal" do %>
    <% if @user && @user.errors.full_messages.any? %>
      <% @user.errors.full_messages.each do |error_message| %>
        <%= error_message %> <br />
      <% end %>
    <% end %>

    <div class="form-group login">
      <div class="form-login-label">
        <label for="inputEmail3" class="control-label">Email</label>
      </div>
      <div class="col-sm-10">
        <%= email_field_tag :email, nil , placeholder: 'jane.doe@example.com', class: "form-control" %>
      </div>
    </div>


    <div class="form-group login">
      <div class="form-login-label">
        <label for="inputPassword3" class="control-label">Password</label>
      </div>
        <div class="col-sm-10">
          <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group login">
        <div class="form-login-lg-btn">
          <%= submit_tag "Sign in", class: "btn btn-primary" %>
        </div>
        
        <div class="form-login-sm-btn">
          <%= link_to 'Back', tickets_path %>
        </div>
    </div>
  <% end %>

</div>

